    "postcss-preset-env": "^9.6.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.10.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "5.3.3",
    "vite": "^5.4.9",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-pwa": "^0.19.8",
    "vite-plugin-stylelint": "^5.3.1",
    "vite-plugin-vuetify": "^2.0.4",
