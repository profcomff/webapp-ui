{
	"root": true,
	"env": {
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-recommended",
		"@vue/typescript/recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"rules": {
		"no-duplicate-imports": "error",
		"vue/html-self-closing": [
			"error",
			{
				"html": {
					"void": "always",
					"normal": "always",
					"component": "always"
				},
				"svg": "always",
				"math": "always"
			}
		]
	}
}
